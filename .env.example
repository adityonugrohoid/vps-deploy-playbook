##############################################################################
# .env.example — Environment variables for multi-app VPS deployment
#
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# NEVER commit .env to version control.
##############################################################################

# ── Server ───────────────────────────────────────────────────────────────────

# Your VPS hostname or IP (used in deploy scripts)
VPS_HOST=your-server-ip
VPS_USER=deploy
VPS_PORT=22

# Domain for Nginx routing
DOMAIN=example.com

# ── Shared Services ─────────────────────────────────────────────────────────

# ChromaDB
CHROMADB_HOST=chromadb
CHROMADB_PORT=8000

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
# REDIS_PASSWORD=          # Uncomment if using Redis auth

# Ollama (local LLM inference)
OLLAMA_HOST=ollama
OLLAMA_PORT=11434
OLLAMA_MODEL=llama3.2

# ── Application Ports ────────────────────────────────────────────────────────
# Internal ports exposed to the Docker network (not to the internet)
# Nginx routes subdomain traffic to these ports

APP_PORTFOLIO_PORT=8080
APP_CHATBOT_PORT=8081
APP_KNOWLEDGE_BASE_PORT=8082
APP_API_GATEWAY_PORT=8083
APP_DASHBOARD_PORT=8084
APP_EMBEDDER_PORT=8085
APP_CLASSIFIER_PORT=8086

# ── API Keys (if apps need external APIs) ────────────────────────────────────

# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
# GOOGLE_API_KEY=AIza...

# ── Monitoring & Alerts ─────────────────────────────────────────────────────

# Discord webhook for deployment notifications
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Telegram bot alerts
# TELEGRAM_BOT_TOKEN=123456:ABC-DEF...
# TELEGRAM_CHAT_ID=123456789

# ── Backup ───────────────────────────────────────────────────────────────────

BACKUP_DIR=/opt/backups
RETENTION_DAYS=7

# rclone remote name (configured via `rclone config`)
# RCLONE_REMOTE=offsite
